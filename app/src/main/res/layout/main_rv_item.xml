<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/hero_icon_card_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hero_icon_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/superhero_placeholder" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/hero_name_text_view"
        style="@style/header_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Axe"
        app:layout_constraintBottom_toBottomOf="@+id/hero_icon_card_view"
        app:layout_constraintStart_toEndOf="@+id/hero_icon_card_view"
        app:layout_constraintTop_toTopOf="@+id/hero_icon_card_view" />


</androidx.constraintlayout.widget.ConstraintLayout>